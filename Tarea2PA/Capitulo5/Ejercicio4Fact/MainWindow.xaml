<Window x:Class="Ejercicio4Fact.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio4Fact"
        mc:Ignorable="d"
        Title="Factorial" Height="146" Width="300">
    <Grid>
        <Label Content="Numero" HorizontalAlignment="Left" Margin="21,22,0,0" VerticalAlignment="Top" Height="29" Width="63" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="num" HorizontalAlignment="Left" Margin="89,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" FontWeight="Bold"/>
        <Button Content="Factorial" HorizontalAlignment="Left" Margin="214,28,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Click="Button_Click"/>
        <Label x:Name="Factorial" Content="Resultado" HorizontalAlignment="Left" Margin="21,69,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
        <TextBox x:Name="res" HorizontalAlignment="Left" Margin="96,74,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
